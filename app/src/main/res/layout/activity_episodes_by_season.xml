<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EpisodesBySeason.EpisodesBySeason"
    android:layout_margin="16dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        />

    <TextView
        android:id="@+id/movieName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sessionNumber"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/movieName"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/episodeAll"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@id/movieName"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/sessionNumber"
        />

    <TextView
        android:id="@+id/not_avaiable"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginTop="27dp"
        android:textColor="#FFD700"
        android:layout_below="@id/sessionNumber"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/epSeason"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sessionNumber" />

</RelativeLayout>


